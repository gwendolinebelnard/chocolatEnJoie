              | est une vie à laquelle manque l'essentiel...”
            .items-home
              img(src='/images/_accueil/bienvenue-white.svg', alt='')
  // Section MISE EN AVANT DE PRODUITS
  section(id='produits container-fluid')
    .color
      .container-fluid
        .wrapper
          .row
            .col-sm-12.text-center
              h2.titreProduct.center-block.text-center
                | Nos
                br
                | suggestions
              p Découvrez nos créations
          .containerSuggestions
            .col-md-8.col-md-offset-2.col-xs-12
              .row.ecartementTextEtImage
                // ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
                each product in products
                  if product.position=="gauche"
                    .col-sm-4
                      a(href='#')
                        .suggestion-wrapper.suggestion
                          .row
                            .col-sm-12.colNoPadding
                              img.img-responsive(src="/images/" + product.image, alt='')
                          .row
                            .text-center.col-sm-12
                              h3=product.name
                          .row
                            .text-center.col-sm-12
                              h5=product.composition
                          .row
                            .text-center.col-sm-6.suggestionNbPieces
                              h4=product.quantity
                            .text-center.col-sm-6.suggestionPoids
                              h5=product.weight
                // ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
                each product in products
                  if product.position=="centre"
                    .col-sm-4
                      a(href='#')
                        .suggestion-wrapper.suggestion
                          .row
                            .col-sm-12.colNoPadding
                              img.img-responsive(src="/images/" + product.image, alt='')
                          .row
                            .text-center.col-sm-12
                              h3=product.name
                          .row
                            .text-center.col-sm-12
                              h5=product.composition
                          .row
                            .text-center.col-sm-6.suggestionNbPieces
                              h4=product.quantity
                            .text-center.col-sm-6.suggestionPoids
                              h5=product.weight
                // ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
                each product in products
                  if product.position=="droite"
                    .col-sm-4
                      a(href='#')
                        .suggestion-wrapper.suggestion
                          .row
                            .col-sm-12.colNoPadding
                              img.img-responsive(src="/images/" + product.image, alt='')
                          .row
                            .text-center.col-sm-12
                              h3=product.name
                          .row
                            .text-center.col-sm-12
                              h5=product.composition
                          .row
                            .text-center.col-sm-6.suggestionNbPieces
                              h4=product.quantity
                            .text-center.col-sm-6.suggestionPoids
                              h5=product.weight
              // row

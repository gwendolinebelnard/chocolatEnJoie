block content
  // Section ACCUEIL
  section
    .container-fluid
      .row
        .col-xs-12.text-center.bghomepage
          .col-sm-6.col-sm-offset-3
            .items-home-1
              img.logohome.img-responsive(src='/images/logo-white.svg', alt='')
